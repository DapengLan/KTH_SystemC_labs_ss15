#include "master.h"
#include <stdio.h>      /* printf, scanf, puts, NULL */
#include <stdlib.h>     /* srand, rand */
#include <time.h>       /* time */

master::master( sc_module_name module_name, int i ) :  //constructor
  sc_module( module_name ) , i(i),
  initiator_port("iport")
{
  SC_THREAD( run );
}

void master::run()
{

  DATA_TYPE d;
  if (i==1) {
	  for(ADDRESS_TYPE a = 0; a <20; a++) {
		  initiator_port.write( a , 1 );
		    cout << "Writing Address " << a << " value :" << 1 << endl;}
  }

  if (i == 2) {
	  for(ADDRESS_TYPE a = 0; a <20; a++) {
	 		  initiator_port.write( a , 1 );
	 		    cout << "Writing Address " << a << " value :" << 2 << endl;}
	   }
  }

  for(int i = 0; i<10;i++){
	  d = rand() % 20 + 1;
	  initiator_port.write(a[i], d );
	    cout << "Writing Address " << a[i] << " value " << d << endl;
  }

}
