#include "master.h"


master::master( sc_module_name module_name ) :  //constructor
  sc_module( module_name ) , 
  initiator_port("iport")
{
	 initiator_port.write( a , a + 50 );
  SC_THREAD( run );
}

void master::run()
{

  DATA_TYPE d;

  for( ADDRESS_TYPE a = 0; a < 150; a++ )
  {

    cout << "Writing Address " << a << " value " << a + 50 << endl;
    initiator_port.write( a , a + 50 );  //write is from the interface base_port

  }

  for( ADDRESS_TYPE a = 0; a < 150; a++ )
  {
	//  wait(100,SC_NS);
    initiator_port.read( a , d );
    cout << "Read Address " << a << " got " << d << endl;

  }
}
