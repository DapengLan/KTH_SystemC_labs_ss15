#include "master.h"
#include <stdio.h>      /* printf, scanf, puts, NULL */
#include <stdlib.h>     /* srand, rand */
#include <time.h>       /* time */

master::master( sc_module_name module_name ) :  //constructor
  sc_module( module_name ) , 
  initiator_port("iport")
{
  SC_THREAD( run );
}

void master::run()
{

  DATA_TYPE d;

  for( ADDRESS_TYPE a = 0; a < 100; a++ )
  {

    cout << "Writing Address " << a << " value " << a + 200 << endl;
    initiator_port.write( a , a + 200 );

  }

  for( ADDRESS_TYPE a = 0; a < 100; a++ )
  {
	//  wait(100,SC_NS);
    initiator_port.read( a , d );
    cout << "Read Address " << a << " got " << d << endl;

  }
}
