#include "memory.h"
#include "systemc.h"

SC_MODULE(testbench1) {
	sc_signal<bool> ce, we;
	sc_signal<unsigned int > data;
	sc_signal<unsigned int >	address;
	memory mem1;
	void mem_vs_t1() {
		ifstream ifs ("T1.txt", ifstream::in);
		unsigned int a;
		unsigned int b;
					address = 0;
		            while (!ifs.eof()) {
		           	ifs >> dec >>a>> hex>>b;
		           	cout <<dec<< a << "  "<< hex<<b<< endl;
		            	if (mem1.data == b) {cout<<"no error"<< endl; }
		           		else {cout<<"data:"<<data<<"vs B:" << b << "  error"<< endl;}
		            }
		            ifs.close();
	}

	void stimulate () {
		for (int i= 0; i < MEMSIZE; i ++) {
			mem1.address= i;
			ce = 1;
			we = 0;
		}
	}

	SC_CTOR(testbench1):mem1("memory") {

		ce = 1;
		we = 0;
		mem1.memread();
		mem1.ce(ce);
		mem1.we(we);
		mem1.data(data);
		mem1.address(address);
		SC_THREAD(stimulate);

	}
};
